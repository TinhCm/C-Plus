#include<iostream>
using namespace std;
#define MAX 100

typedef struct
{
	int top;
	int node[MAX];
} stack;

bool Empty(stack* s)
{
	if (s -> top == -1)
		return true;
	return false;
}

bool Full(stack* s)
{
	if (s->top == MAX - 1)
		return true;
	return false;
}

void Push(stack* s, int x)
{
	if (Full(s))
	{ 
		cout << " Ngan xep day !";
		return;
	}
	else 
	{
		s->top++;
		s->node[s->top] = x; 
		return;
	}
}

void nhapnhieuphantu(stack s)
{
	int n;
	int c;
	cout << "\nNhap vao so luong phan tu: ";
	cin >> n;
	for (int i = 0; i < n; i++)
	{
		rewind;
		cout << "Nhap vao phan tu thu " << i << endl;
		cin >> c;
		Push(&s, c);
	}
}

int Pop(stack* s)
{
	if (Empty(s))
	{
		cout << "Ngan xep rong !";
	}
	else
	{
		return s->node[s->top--];
	}
}

void xuatnhieuphantu(stack s)
{
	/*int n;
	int c;
	cout << "Nhap vao so luong phan tu: ";
	cin >> n;*/
	for (int i = 0; i<2; i++)
	{
		cout << "Xuat phan tu thu " << i << Pop(&s);
	}
}


